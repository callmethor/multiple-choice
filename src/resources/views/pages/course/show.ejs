<%- include('../../base/head') %>
<%- include('../../components/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-between">
        <div class="col-lg-9">
            <h2> 
                <b><%= course.name %></b>
            </h2>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= course.videoID %>"
                    allowfullscreen></iframe>
            </div>
            <p class="mt-4">
                <%= course.description %>
            </p>
        </div>       
        
        <div class="col-lg-3 mb-4" style="padding-top: 46.4px">
        <% relatedCourses.forEach((course, index) => { %> 
            <div class="list-group">
              
                    <div class="mb-4 card d-flex w-100 justify-content-between" style="width: 18rem;">
                        <a href="/student/courses/<%=course.slug%>">
                            <img class="card-img-top" src="<%= course.image %>" alt="<%= course.name %>">
                            <div class="card-body">
                                <h6 class="card-link"><%= course.name %></h6>
                            </div>
                        </a>
                      </div>                </div>
              <%})  %> 
        </div>
    </div>
</div>

<%- include('../../components/footer') %>
<%- include('../../base/end') %>